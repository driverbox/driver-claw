
{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": {
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "path": { "type": "string" },
        "url": { "type": "string" },
        "file_type": {
          "type": "string",
          "enum": ["exe", "zip", "zip/folder", "zip/exe"]
        },
        "rename_as": {
          "type": ["string", "null"]
        }
      },
      "required": ["path", "url", "file_type", "rename_as"],
      "additionalProperties": false
    }
  }
}
